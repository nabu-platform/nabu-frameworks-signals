<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<crud>
    <allowHeaderAsQueryParameter>true</allowHeaderAsQueryParameter>
    <coreType>nabu.frameworks.signals.database.types.signalRule</coreType>
    <createRole>$user</createRole>
    <deleteRole>$user</deleteRole>
    <filters>
        <caseInsensitive>false</caseInsensitive>
        <key>parentId</key>
        <operator>is null</operator>
        <or>false</or>
        <alias>root</alias>
        <input>true</input>
    </filters>
    <filters>
        <caseInsensitive>false</caseInsensitive>
        <key>parentId</key>
        <operator>=</operator>
        <or>false</or>
        <input>true</input>
    </filters>
    <filters>
        <caseInsensitive>false</caseInsensitive>
        <key>typeId</key>
        <operator>=</operator>
        <or>false</or>
        <input>true</input>
    </filters>
    <filters>
        <caseInsensitive>false</caseInsensitive>
        <key>typeId</key>
        <operator>is null</operator>
        <or>true</or>
        <alias>untyped</alias>
        <input>true</input>
    </filters>
    <filters>
        <caseInsensitive>false</caseInsensitive>
        <key>id</key>
        <operator>=</operator>
        <or>false</or>
        <input>true</input>
    </filters>
    <listRole>$user</listRole>
    <provider>nabu.services.crud.provider.basic.provider</provider>
    <updateRole>$user</updateRole>
    <useExplicitLanguage>false</useExplicitLanguage>
    <useLanguage>false</useLanguage>
</crud>
